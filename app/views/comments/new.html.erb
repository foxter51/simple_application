<h1>Comment for <%= @post.title %></h1>

<%= form_for @comment, url: {action: :create} do |f| %>
  <%= "<div>#{@comment.errors.full_messages.first}</div>".html_safe if @comment.errors.any? %>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, maxlength: 100, cols: 97, rows: 10, style: "resize:none" %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>

<nav style="display: flex; justify-content: space-between; width: 300px">
  <div><%= link_to 'Back', :back %></div>
  <div><%= link_to 'Posts', posts_path %></div>
</nav>

