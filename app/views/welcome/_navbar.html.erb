<h1>Simple Application</h1>

<% if user_signed_in? %>
  Logged in as
  <%= image_tag(current_user.avatar, width: 30, height: 30) if current_user.avatar.attached? %>
  <strong><%= "#{current_user.name} #{current_user.lastname}" %></strong> |
  <%= link_to "Logout", destroy_user_session_path, method: :get, class: 'navbar-link'  %>
  <hr>
  <strong><%= link_to 'Home', feed_index_path %></strong>
  <%= link_to 'My profile', current_user %>
  <%= link_to 'Edit profile', edit_user_registration_path, class: 'navbar-link' %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, class: 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, class: 'navbar-link'  %> |
<% end %>
<%= link_to 'Posts', posts_path %>
<p class="notice"><%= notice %></p>