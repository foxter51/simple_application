<h1>Simple Application</h1>

<% if user_signed_in? %>
  Logged in as
  <%= image_tag(current_user.avatar, width: 30, height: 30) if current_user.avatar.attached? %>
  <strong><%= link_to "#{current_user.name} #{current_user.lastname}", current_user %></strong>
  <%= link_to 'Edit profile', edit_user_registration_path, class: 'navbar-link' %> |
  <%= link_to "Logout", destroy_user_session_path, method: :get, class: 'navbar-link'  %>
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search" %>
  <% end %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, class: 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, class: 'navbar-link'  %>
<% end %>
<div><%= link_to 'Posts', posts_path %></div>
<p class="notice"><%= notice %></p>