<h1>Search Results</h1>

<nav style="display: flex; justify-content: space-between; width: 300px">
  <div><%= link_to 'Back', :back %></div>
  <div><%= link_to 'Home', root_path %></div>
  <div><%= link_to 'New Post', new_post_path %></div>
</nav>

<p class="notice"><%= flash[:warning] %></p>

<div style="margin: 20px">
  <% @search_results.order(created_at: :desc).each do |entity| %>
    <% if entity.searchable.class.to_s == 'User' %>
      <div>
        <%= link_to "#{entity.searchable.name} #{entity.searchable.lastname}", entity.searchable %>
      </div>
    <% else %>
      <div>
        <%= link_to entity.searchable.title, entity.searchable %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="pag-bar mt-5 pt-5">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>

